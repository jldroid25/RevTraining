
public class ProgramTaskList {

	// # 1 write a program to repeat a multiple of a number 
	// 5, - 3, 10, 15 ...
	
	public static void repeatMultiple(int num  ) {
		for(int i =  0;  i <= 50 ; i++  ) {
			int result  =  i * num;
	
			System.out.println( "Multiple  of a number : " + result);
		}
	}
	
	// # 2  sum of digits
	public static void addSum() {
		int result = 2;
		
		for(int a =  0;  a <= 10 ; a++  ) {
			result += a ;
			System.out.println( "adding numbers  : " +  result );
		}
	}
	
	// #4  find the Factorial of a number 
	public static int factorial( int num) {
		
		//BAse case if param is 0 or 1
		if(num <= 0) return 0;
		if(num) == 1) return 1;
		
		//recursive call
		return num * factorial(num - 1);
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 //repeatMultiple(5);
		 
		 System.out.println( "----------------------------------------");
		 
		 //addSum();
		 
		 //calling factorial of  method
		 factorial(5);
		 
	}//main 
}//class
